{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "build": {
      "env": {
          "NODEJS_HELPERS": "0"
      }
  },
  "headers": [
      {
          "source": "api/(.*)",
          "headers": [
              {
                  "key": "X-Content-Type-Options",
                  "value": "nosniff"
              },
              {
                  "key": "X-Frame-Options",
                  "value": "DENY"
              },
              {
                  "key": "X-XSS-Protection",
                  "value": "1; mode=block"
              },
              {
                  "key": "Content-Type",
                  "value": "Application/json; charset=utf-8"
              }
          ]
      }
  ],
  "rewrites": [
      {
          "source": "/(.*)",
          "destination": "/index.html"
      }
  ]
}